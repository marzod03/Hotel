generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Administrador {
  id       Int    @id @default(autoincrement())
  nombre   String
  correo   String @unique
  password String
}

model Habitacion {
  id          Int       @id @default(autoincrement())
  nombre      String
  precio      Float
  descripcion String
  imagenUrl   String
  Reserva     Reserva[]
}

model ImagenHotel {
  id  Int    @id @default(autoincrement())
  url String
}

model Reserva {
  id             Int        @id @default(autoincrement())
  nombreCliente  String
  fechaEntrada   DateTime
  fechaSalida    DateTime
  tipoHabitacion String
  status         String     @default("pendiente")
  habitacionId   Int
  Habitacion     Habitacion @relation(fields: [habitacionId], references: [id])

  @@index([habitacionId], map: "Reserva_habitacionId_fkey")
}
